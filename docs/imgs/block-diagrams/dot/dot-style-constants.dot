// DESCRIPTION
// Preprocessor directives used in place of creating constants in DOT.
//______________________________________________________________________

#ifndef DOT_CONSTANTS
#define DOT_CONSTANTS

// Standard ANSI 16 colors from flux bunny dark color scheme
#define FLUX_DARK_RED     "#d75f87"
#define FLUX_DARK_GRN     "#87d75f"
#define FLUX_DARK_YEL     "#d7875f"
#define FLUX_DARK_BLU     "#5f5fd7"
#define FLUX_DARK_MAG     "#af5fd7"
#define FLUX_DARK_CYA     "#5fafd7"

#define MONOSPACE_FONT    "Consolas"

#define TITLE_STYLE \
  fontsize = 20 \
  fontname = MONOSPACE_FONT

#define SUBGRAPH_TITLE_STYLE \
    fontsize = 14 \
    penwidth = .25

#define NODE_STYLE \
      fontsize = 10 \
      fontname = MONOSPACE_FONT \
      color    = FLUX_DARK_MAG

#endif